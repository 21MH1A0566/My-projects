<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/jobs_card"
        android:layout_width="350dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="100dp"
        android:layout_marginBottom="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/job_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Job Title"
            android:textSize="30dp"
            android:textStyle="bold" />
            <View
                android:id="@+id/underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="8dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/experience_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:text="Experience :"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/experience_wanted1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/experience_wanted1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Experience you want"
                app:layout_constraintStart_toEndOf="@id/experience_heading"
                app:layout_constraintTop_toTopOf="@id/experience_heading" />

            <TextView
                android:id="@+id/skills_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Skills :"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/skills_wanted1"
                app:layout_constraintTop_toTopOf="@id/skills_wanted1" />

            <TextView
                android:id="@+id/skills_wanted1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Skills you want"
                app:layout_constraintStart_toStartOf="@id/experience_wanted1"
                app:layout_constraintTop_toBottomOf="@id/experience_wanted1" />

            <TextView
                android:id="@+id/job_status_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Job Status :"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/job_status_wanted1"
                app:layout_constraintTop_toTopOf="@id/job_status_wanted1" />

            <TextView
                android:id="@+id/job_status_wanted1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Job Status Here"
                app:layout_constraintStart_toStartOf="@id/skills_wanted1"
                app:layout_constraintTop_toBottomOf="@id/skills_wanted1" />

            <TextView
                android:id="@+id/salary_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Salary :"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/salary_wanted1"
                app:layout_constraintTop_toTopOf="@id/salary_wanted1" />

            <TextView
                android:id="@+id/salary_wanted1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Salary Here"
                app:layout_constraintStart_toStartOf="@id/job_status_wanted1"
                app:layout_constraintTop_toBottomOf="@id/job_status_wanted1" />

            <TextView
                android:id="@+id/about_job_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="About Job :"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/about_job_wanted1"
                app:layout_constraintTop_toTopOf="@id/about_job_wanted1" />

            <TextView
                android:id="@+id/about_job_wanted1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="About Job Here"
                app:layout_constraintStart_toStartOf="@id/salary_wanted1"
                app:layout_constraintTop_toBottomOf="@id/salary_wanted1" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="BLAC"
                android:textSize="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="40dp"/>
            <TextView
                android:id="@+id/linking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”— Build Link between Adept and Companies "
                android:textAlignment="center"
                android:textSize="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/profiling"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Name"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/occupation1"
        app:layout_constraintStart_toEndOf="@+id/profile_image1"
        app:layout_constraintTop_toTopOf="@id/profile_image1"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/occupation1"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Occupation"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/name1"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/apply_button1"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="120dp"
        android:text="Apply for this Job"
        android:textColor="@color/sky_blue"
        app:layout_constraintStart_toEndOf="@id/profile_image1"
        app:layout_constraintTop_toTopOf="@id/profile_image1"
        app:strokeColor="@color/sky_blue" />
</androidx.constraintlayout.widget.ConstraintLayout>